APP_NAME=Laravel
APP_ENV=testing
APP_KEY=base64:dummyKeyForTestsOnly000000000000000000000000000=
APP_DEBUG=true
APP_URL=http://localhost

# Banco de dados só para testes (em memória)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Logs não vão para arquivo -> stderr (visível no console)
LOG_CHANNEL=stderr
LOG_LEVEL=warning

# Outros drivers em memória para não deixar lixo
CACHE_DRIVER=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync

# Não precisa mail real
MAIL_MAILER=array

# Sanctum/SPA config (se usar)
SANCTUM_STATEFUL_DOMAINS=localhost:3000
